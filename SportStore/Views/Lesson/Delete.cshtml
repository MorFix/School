@model SportStore.Entities.Lesson

@{
    ViewData["Title"] = "מחיקת שיעור";
}

<h1>מחיקה</h1>

<h3>האם אתה בטוח שברצונך למחוק שיעור זה?</h3>
<div>
    <h4>שיעור</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            מורה
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Teacher.FullName)
        </dd class>
        <dt class = "col-sm-2">
            חדר
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Room.Name)
        </dd class>
        <dt class = "col-sm-2">
            נושא
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class = "col-sm-2">
            יום
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DayOfWeek)
        </dd>
        <dt class = "col-sm-2">
            שעה
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hour)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="מחק" class="btn btn-danger" /> |
        <a asp-action="Index">חזור לרשימת השיעורים</a>
    </form>
</div>
